<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventSelectionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        tools:ignore="MissingClass" />


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_calandar_logo"
            android:drawablePadding="8dp"
            android:hint="hint_year"
            android:hintTextColor="#546E7A"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="4"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/team_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1.0"
            android:drawableStart="@drawable/ic_small_people"
            android:drawablePadding="8dp"
            android:hint="hint_team"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="4"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>


    <ListView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/event_list"/>

</LinearLayout>